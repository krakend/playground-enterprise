{
  "version": 3,
  "name": "KrakenD Enterprise API Gateway",
  "port": 8080,
  "host": ["http://localhost:8000"],
  "conf_dir": "/etc/krakend",
  "grpc_catalog": "/etc/krakend/grpc_catalog",
  "debug_endpoint": true,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "static_files_dir": "/wwwroot",
  "qos_rate_shards": 20480,
  "opentelemetry": {
    "prometheus": {
        "port": 9090
    },
    "tempogrpc": {
        "port": 4317,
        "host": "tempo"
    },
    "jaegergrpc": {
        "port": 4317,
        "host": "jaeeger"
    },
    "datadog": {
        "disable_metrics": true,
        "disable_traces": true
    }
  }
}
